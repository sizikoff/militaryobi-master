<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbarTopInFouthAct"
        layout="@layout/toolbar_fragment_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/toolbarTopInFouthAct"
        android:id="@+id/buttonFindProductInFragmentFindFourthAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ищи товар!"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewInFragmentOneActivityFourth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFindProductInFragmentFindFourthAct" />

</android.support.constraint.ConstraintLayout>